@model BookReading.Event.Models.EventViewModel

@{ ViewData["Title"] = "CreateEvent"; }
<h1 class="text-info fw-bold">Create your Event</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Title" class="control-label fw-bold"></label>
                <input asp-for="Title" class="form-control input-sm" placeholder="Title.." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Date" class="control-label fw-bold"></label>
                <input asp-for="Date" class="form-control" placeholder="Date..." />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="StartTime" class="control-label fw-bold"></label>
                <input asp-for="StartTime" class="form-control" placeholder="Start Time..." />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Location" class="control-label fw-bold"></label>
                <input asp-for="Location" class="form-control" placeholder="Venue..." />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" placeholder="Description..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Duration" class="control-label fw-bold"></label>
                <input asp-for="Duration" class="form-control" placeholder="Duration..." />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Organiser" class="control-label fw-bold"></label>
                <input asp-for="Organiser" class="form-control" placeholder="Organiser..." />
                <span asp-validation-for="Organiser" class="text-danger"></span>
            </div>
            <div class="form-group my-2">

                <label asp-for="EventType" class="control-label fw-bold"></label>&nbsp;
                <input type="radio" name="eventType" value="Public" checked />&nbsp;Public&nbsp;
                <input type="radio" name="eventType" value="Private" />&nbsp;Private&nbsp;
                <span asp-validation-for="EventType" class="text-danger"></span>

            </div>
            <div class="form-group my-2">
                <label asp-for="Invitees" class="control-label fw-bold"></label>
                <input asp-for="Invitees" class="form-control" placeholder="Invitees..." />
                <span asp-validation-for="Invitees" class="text-Sdanger"></span>
            </div>

            <div class="form-group my-2 fw-bold">
                <input type="submit" value="Create" class="btn btn-info btn-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
